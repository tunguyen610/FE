            // $('#tableData tbody '+NO_FKFKUpdateSelector+' td[property=NO_FKId]').each(function(){
            //     // debugger;
            //     var promotionId = parseInt($(this).attr('class').replace('row','').replace('-column',''));
            //     var promotionObj = getItemById(promotionId);
            //     var NO_FKId = parseInt(promotionObj.NO_FKId);
            //     var NO_FKObj = NO_FKData.find(item => parseInt(item.id) === NO_FKId);
            //     $(this).text(NO_FKObj.name);
            //     // console.log('FK updated for Staff '+promotionId);
            // });


            formatNumber();
        }


        function getItemById(id) {
            const result = dataSource.find(item => parseInt(item.id) === id);
            return result;
        }


</script>