            var updatingObj = {
                		"id": $("#organizationId").val(),
		"organizationTypeId": $("#organizationOrganizationTypeId").val(),
		"active": $("#organizationActive").val(),
		"photo": $("#organizationPhoto").val(),
		"name": $("#organizationName").val(),
		"description": $("#organizationDescription").val(),
