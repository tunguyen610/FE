            // $('#tableData tbody '+NO_FKFKUpdateSelector+' td[property=NO_FKId]').each(function(){
            //     // debugger;
            //     var preferentialTypeId = parseInt($(this).attr('class').replace('row','').replace('-column',''));
            //     var preferentialTypeObj = getItemById(preferentialTypeId);
            //     var NO_FKId = parseInt(preferentialTypeObj.NO_FKId);
            //     var NO_FKObj = NO_FKData.find(item => parseInt(item.id) === NO_FKId);
            //     $(this).text(NO_FKObj.name);
            //     // console.log('FK updated for Staff '+preferentialTypeId);
            // });
            
            
            formatNumber();
        }


        function getItemById(id) {
            const result = dataSource.find(item => parseInt(item.id) === id);
            return result;
        } 

            
