		$("#preferentialTypeName").val(id > 0 ? obj.name : "");
		$("#preferentialTypeDescription").val(id > 0 ? obj.description : "");
		$("#preferentialTypeCreatedTime").val(id > 0 ? obj.createdTime : "");

            // $("#preferentialTypeId").val(id > 0 ? obj.id : "");
