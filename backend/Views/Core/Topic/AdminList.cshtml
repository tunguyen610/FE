            "id": $("#topicId").val(),
            "active": $("#topicActive").val(),
            "name": $("#topicName").val(),
            "name2": $("#topicName2").val(),
            "slug": $("#topicSlug").val(),
            "slug2": $("#topicSlug2").val(),
            "color": $("#topicColor").val(),
