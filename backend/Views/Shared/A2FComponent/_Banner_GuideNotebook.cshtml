@{
    Layout = null;
}
<!--CSS start-->
<style>
    #RemovePadding {
        color: white;
        font-size: 40px;
        padding: 0% 27%;  
    }
</style>
<!--Responsive Start-->
<!--Iphone 5-->
<style>
    @@media only screen and (max-width:320px) {
        #RemovePadding {
            padding: 0;
        }
    }
</style>
<!--Iphone 5 end-->
<!--Iphone 6/7/8/X start-->
<style>
    @@media only screen and (min-width:321px) and (max-width: 425px) {
        #RemovePadding {
            padding: 0;
        }
    }
</style>
<!--Iphone 6/7/8/X end-->
<!--Iphone 6/7/8/X+ Start-->
<style>
    @@media only screen and (min-width:426px) and (max-width: 767px) {
        #RemovePadding {
            padding: 0;
        }
    }
</style>
<!--Iphone 6/7/8/X+ End-->
<!--Ipad Start-->
<style>
    @@media only screen and (min-width:768px) and (max-width: 1023px) {
        #RemovePadding {
            padding: 0;
        }
    }
</style>
<!--Ipad End-->
<div class="container-fluid" style="background-image: linear-gradient(rgba(7, 30, 64, 0.8),rgba(7, 30, 64, 0.8)),url('/images/image 32.png'); background-size: 100% 100%; text-align: center;">
    <p data-aos="zoom-in-down" data-aos-duration="800" style="color: #F6A01F;font-size: 20px;letter-spacing: 5px;margin-top: 5%;text-transform:uppercase;">@ViewBag.lblSoTayTitle</p>
    <p data-aos="zoom-in-down" data-aos-duration="800" data-aos-delay="400" id="RemovePadding" style="text-transform:uppercase;">@ViewBag.lblSoTayBannerTittle2</p>
    <span>

        <script>
            $(document).ready(function () {
                if (window.location.href.indexOf("so-tay-tai-chinh") > -1 || window.location.href.indexOf("GuideNotebook") > -1) {
                    $('#btn1').show();
                } else {
                    $('#btn2').show();
                }
            });
        </script>
        <button id="btn1"  onclick="checkLoginSotay(@ViewBag.UserID)" style="color: white; background: linear-gradient(278.2deg, #E4750E 11.21%, rgba(228, 117, 14, 0) 103.52%), linear-gradient(0deg, #FFB526, #FFB526); margin: 2% 2% 5% 0%; width: 211px; height: 45px; font-size: 15px; display: none;letter-spacing: 1px; border-radius: 4px; border: none;">
            @ViewBag.lblTraCuuTrucTuyen
        </button>
        @*onclick="window.location.href='/GuideNotebook'"*@
        <button id="btn2" onclick="window.location.href='/so-tay-tai-chinh';" style="color: white;background: linear-gradient(278.2deg, #E4750E 11.21%, rgba(228, 117, 14, 0) 103.52%),
                linear-gradient(0deg, #FFB526, #FFB526);margin: 2% 2% 5% 0%; width: 211px; height: 45px;font-size: 15px;letter-spacing: 1px;border-radius: 4px; display: none; border : none;">
            QUAY LẠI TRANG SỔ TAY
        </button>

    </span>
    <span><button id="downloadButton" style="background: transparent;border-color: white;color: white;width: 211px; height: 45px;font-size: 15px;letter-spacing: 1px;border-radius: 4px; margin-bottom:5%;"><i class="fas fa-cloud-download-alt"></i>@ViewBag.lblTaiVeSoTay</button></span>
</div>

<script>
    $('#downloadButton').click(function (e) {
        e.preventDefault();  //stop the browser from following
        checkLoginDownload(@ViewBag.UserID);
    });

    function checkLoginDownload(UserID) {
        debugger;
        if (UserID == 0) {
            Swal.fire({
                title: 'Bạn chưa đăng nhập',
                html: "Vui lòng đăng nhập để tải về sổ tay",
                type: 'info',
                showCancelButton: true,
                confirmButtonColor: '#FF512F',
                cancelButtonColor: '#777',
                confirmButtonText: 'Đến trang đăng nhập',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.value == true) {
                    location.href = "/dang-nhap";
                }
            });
        } else if (UserID == 10002) {
            Swal.fire({
                title: 'Tài khoản của bạn là tài khoản cá nhân vì vậy không thể truy cập',
                html: "Hãy đăng nhập tài khoản doanh nghiệp để truy cập",
                type: 'info',
                showCancelButton: true,
                confirmButtonColor: '#FF512F',
                cancelButtonColor: '#777',
                confirmButtonText: 'Đến trang đăng nhập',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.value == true) {
                    location.href = "/dang-nhap";
                }
            });
        } else {
            window.location.href = "@ViewBag.Sotay";
        }

                //window.location.href='/tra-cuu-truc-tuyen';
    }
</script>