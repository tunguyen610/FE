        .image_tab {
            display: none;
        }

        .Content_tab {
            border-radius: 25px 25px 25px 25px;
        }

            .Content_tab p:nth-child(2) {
                font-size: 15px;
            }

            .Content_tab p:nth-child(3) {
                font-size: 25px;
                width: auto;
                height: auto;
            }

        #clock {
            padding-top: 25%;
        }

        #ClockMeaning .padding {
            padding-left: 9%;
        }

        #ClockMeaning {
            padding-bottom: 20%;
        }
    }

    @@media (min-width:376px) and (max-width: 425px) {
        .image_tab {
            display: none;
        }

        .Content_tab {
            border-radius: 25px 25px 25px 25px;
        }

            .Content_tab p:nth-child(2) {
                font-size: 15px;
            }

            .Content_tab p:nth-child(3) {
                font-size: 25px;
                width: auto;
                height: auto;
            }

        #clock {
            padding-top: 20%;
        }

        #ClockMeaning .padding {
            padding-left: 7%;
        }

        #ClockMeaning {
