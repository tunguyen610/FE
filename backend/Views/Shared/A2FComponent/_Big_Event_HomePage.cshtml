
@{
    Layout = null;
}

<!--CSS Start-->
<style>
    #clock #day {
        color: #E4750E;
        font-size: 35px;
        font-family: My Custom Regular;
        width: 61px;
        height: 41px;
    }

    #clock span {
        color: white;
        font-size: 35px;
        font-family: My Custom Regular;
        width: 61px;
        height: 41px;
    }

    #clock #twodot {
        color: #FFFFFF;
        font-size: 20px;
        font-family: My Custom Regular;
        padding: 0px 5px 0px 5px;
    }

    #clock {
        font-family: My Custom Regular;
        padding-top: 26px;
    }

    #ClockMeaning {
        font-size: 12px;
        font-family: My Custom Regular;
        letter-spacing: 2px;
        color: white;
        padding-bottom: 5%;
        text-transform: uppercase;
        width:80%;
    }

        #ClockMeaning .padding {
            padding-left: 2.4%;
        }

    #StripCover {
        position: absolute;
        bottom: 0;
        right: 0;
    }

    .image_tab {
        height: 400px;
        border-radius: 25px 0px 0px 25px;
        background-size: 100% 100%;
    }

    .Content_tab {
        background-color: #11335a;
        height: 400px;
        border-radius: 0px 25px 25px 0px;
        padding-left: 39px;
    }

    .image_tab img {
        padding-top: 308px;
        padding-left: 15px;
    }

    .Content_tab p:nth-child(2) {
        font-size: 18px;
        font-family: My Custom Regular;
        color: white;
        padding-top: 5%;
        letter-spacing:1px;
    }

    .Content_tab p:nth-child(3) {
        font-family: Roboto Medium;
        color: #2AD9FF;
        font-size: 35px;
        width: 100%;
        height: 94px;
    }

    #Link_Event {
        text-align: center;
        font-size: 15px;
        font-family: My Custom Regular;
        color: white;
        padding-right: 2%;
        letter-spacing:1px;
    }
</style>
<!--CSS End-->
<!--Responsive Start-->
<style>
