@{
    Layout = null;
}
<style>
    .field-icon {
        float: right;
        margin-right: 10px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }

    .buttonConfirm {
        background: linear-gradient( 271.67deg, #E4750E 3.49%, rgba(228, 117, 14, 0) 134.77%), linear-gradient( 0deg, #FFB526, #FFB526);
        color: white;
        border: unset;
        padding-left: 15px;
        padding-right: 15px;
        width: 250px;
        height: 50px;
        border-radius: 5px;
    }
</style>
<div class="container-fluid" style="background-color: #F1FDFF; height: 500px">
    <div class="container">
        <h5 style="margin-top: 20px; margin-bottom: 20px">Trang chủ / Tạo mật khẩu mới </h5>

        <div class="row" style="background-color: white; padding: 10px 25px 10px 25px; border: 1px solid #D5ECF1" ; width: 100%">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div>
                        <h3 style="color: #265178; font-size: 28px; font-weight: 700">Tạo mật khẩu mới </h3>
                        <p style="margin-top: 5px; margin-bottom: 0">Cập nhật mật khẩu cho tài khoản: <b>hainam97hp@gmail.com</b> </p>
                        <div class="form-group">
                            <label style="margin-top: 15px" for="password">Mật khẩu mới</label>
                            <input id="newpass" type="password" class="form-control" name="password" placeholder="Nhập mật khẩu">
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password" id="togglePassword"></span>
                            <label style="margin-top: 15px" for="password">Nhập lại mật khẩu mới</label>
                            <input id="renewpass"type="password" class="form-control" name="password" placeholder="Nhập lại mật khẩu">
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password2" id="togglePassword2"></span>
                            <button class="buttonConfirm" style="margin-top: 30px; font-size: 20px">Cập nhật mật khẩu</button>
                        </div>

                    </div>
                </div>
                <div class="col-md-6" style="text-align: center">
                    <img src="~/images/CreatePasswordIcon.bmp" style="margin-top: 20px">
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    $(".toggle-password").click(function () {
        $(this).toggleClass("fa-eye-slash");
        var x = document.getElementById("newpass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    });
    $(".toggle-password2").click(function () {
        $(this).toggleClass("fa-eye-slash");
        var x = document.getElementById("renewpass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    });
</script>