<script>
    var a = @ViewBag.HaveListEventAboutToStartSoon;
    if (a == 1)
    {
        $('#myCarousel').show();
    }
    else
    {
        $('#myCarousel').hide();
    }
</script>
<div class="container slide-event">
    @if (ViewBag.HaveListEventAboutToStartSoon == 1)
    {
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->

            <ol class="carousel-indicators" style="bottom: -55px">

                <!--Sau chỗ này sẽ có vòng for dựa trên số viewbag sắp diễn ra -->
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

                @for (int i = 1; i < ViewBag.listPostEventAboutToStartSoon.Count; i++)
                {
                    <li data-target="#myCarousel" data-slide-to="@i"></li>
                }


            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <!-- Load tất cả sự kiện sắp diễn ra -->
                @if (ViewBag.HaveListEventAboutToStartSoon == 1)
                {
                    @for (int i = 0; i < ViewBag.listPostEventAboutToStartSoon.Count; i++)
                    {
                        var item = ViewBag.listPostEventAboutToStartSoon[i];
                        var day = "day" + i;
                        var hour = "hour" + i;
                        var minute = "minute" + i;
                        var second = "second" + i;
                        <div class="item">

                            <div class="container-fluid event-carousel" style="padding-top: 65px;padding-bottom:2%;">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-xs-0 col-sm-4 col-md-4 col-lg-4" id="image-carousel" style="background-image: url('@item.Photo'); height: 362px; border-radius: 25px 0px 0px 25px; background-size: 100% 100%">
                                            @*<img src="~/images/Group 265.png">*@
                                        </div>

                                        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 Content_tab" style="width: 63%">
                                            <img src="~/images/Group (1).png" id="StripCover" />
                                            <p>
                                                @ViewBag.lblSuKienSapDienRa
                                            </p>
                                            <p class="text-news carousel-events-text">
                                                @item.Name
                                            </p>

                                            <div id="clock" data-time="@item.OpenTime">
                                                <span style="color: #FFB800" id="@day"></span>
                                                <span id="twodot">:</span>
                                                <span id="@hour"></span>
                                                <span id="twodot">:</span>
                                                <span id="@minute"></span>
                                                <span id="twodot">:</span>
                                                <span id="@second"></span>
                                            </div>
                                            <div id="ClockMeaning">
                                                <span>@ViewBag.lblNgay</span>
                                                <span class="padding">@ViewBag.lblGio</span>
                                                <span class="padding">@ViewBag.lblPhut</span>
                                                <span class="padding">@ViewBag.lblGiay</span>
                                            </div>
                                            <div><a href="/chi-tiet-su-kien/@item.Url"><span id="Link_Event">@ViewBag.lblDangKyThamGia</span><span style="color: white;"><i class="fa fa-chevron-right"></i></span></a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

                <script>
            //Đếm ngược
            // Update the count down every 1 second

                            setTimeout(function() {
                                var x = setInterval(function() {
                                    var dataClock = @Html.Raw(ViewBag.listPostEventAboutToStartSoonJson);
                                    for (var i = 0; i < dataClock.length; i++)
                                    {
                                        var countDownDate = new Date(dataClock[i].OpenTime).getTime();
                                        // Get today's date and time
                                        var now = new Date().getTime();

                                        // Find the distance between now and the count down date
                                        var distance = countDownDate - now;

                                        // Time calculations for days, hours, minutes and seconds
                                        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
                                        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                                        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

                                        if (days.toString().length < 2)
                                        {
                                            days = '0' + days;
                                        }
                                        if (hours.toString().length < 2)
                                        {
                                            hours = '0' + hours;
                                        }
                                        if (minutes.toString().length < 2)
                                        {
                                            minutes = '0' + minutes;
                                        }
                                        if (seconds.toString().length < 2)
                                        {
                                            seconds = '0' + seconds;
                                        }

                                        //$("#day" + i).text(days);
                                        document.getElementById("day" + i).innerHTML = days;

                                        document.getElementById("hour" + i).innerHTML = hours;

                                        document.getElementById("minute" + i).innerHTML = minutes;

                                        document.getElementById("second" + i).innerHTML = seconds;


                                        // If the count down is finished, write some text

                                        if (distance < 0)
                                        {

                                            clearInterval(x);

                                            document.getElementById("day" + i).innerHTML = 'EXPIRED';

                                            document.getElementById("hour" + i).innerHTML = 'EXPIRED';

                                            document.getElementById("minute" + i).innerHTML = 'EXPIRED';

                                            document.getElementById("second" + i).innerHTML = 'EXPIRED';

                                        }
                                    }
                                }, 200);


                            },50)




                </script>
            </div>


        </div>
    }
    else {
        <h3 style="text-align: center; text-transform: uppercase">Hiện chưa có sự kiện nào sắp diễn ra</h3>
    }
        <!-- Content : Ends -->
