<script>
        function watchSurveyHistoryList(SurveyTypeId) {
        if(@ViewBag.UserID == 0 && @ViewBag.UserTypeID == 0) {
            Swal.fire({
                    title: 'Bạn chưa đăng nhập',
                    html: "Vui lòng đăng nhập tài khoản doanh nghiệp để xem lịch sử đánh giá",
                    type: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#FF512F',
                    cancelButtonColor: '#777',
                    confirmButtonText: 'Đến trang đăng nhập',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.value) {
                        location.href = "/dang-nhap";
                    }
                });
        }else if(@ViewBag.UserTypeID == 10002) {
                Swal.fire({
                    title: 'Tài khoản của bạn không có quyền',
