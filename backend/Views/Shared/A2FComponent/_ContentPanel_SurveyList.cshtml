<!-- gioi thieu cong cu danh gia-->
 

@for (int i = 0; i < ViewBag.listSurvey.Count; i++)
{
    var item = ViewBag.listSurvey[i];

    <div class="container survey-tool survey-bg" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.5)), url(@item.Photo)">
        <div class="wrapping-container">
            <h3 style="font-size: 28px" class="ellipsis2 titleSurveyName">@item.Name</h3>
            <p class="surveyDescription"@*class="ellipsis3"*@>@item.Description</p>
            <button onclick="checkSignUpforSurvey(@ViewBag.UserID , @item.Id)" class="btn btn-warning btn-survey">@ViewBag.lblThucHienDanhGia</button>
            <a style="cursor: pointer;" onclick="watchSurveyHistoryList(@item.SurveyTypeId)"><i class="fas fa-history"></i> @ViewBag.lblXemLichSuDanhGia</a>
        </div>
    </div>
}

