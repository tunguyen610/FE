@{
    Layout = null;
}

<!-- CSS Start -->
<style>
    .survey-tool {
        margin: 50px auto;
        height: 360px;
        width: 85%;
        left: 0px;
        top: 0px;
        border-radius: 10px;
    }

        .survey-tool.survey-bg {
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }


        .survey-tool .wrapping-container {
            padding: 48px 200px 20px 80px;
        }

    div.wrapping-container h3 {
        font-size: 36px;
        font-style: normal;
        line-height: 47px;
        color: #2AD9FF;
    }

    div.wrapping-container p {
        color: #FFFFFF;
        margin-bottom: 30px;
        font-size: 17px;
        font-style: normal;
        font-weight: 400;
        line-height: 20px;
        letter-spacing: 0.03em;
        text-align: left;
        padding-right: 20px;
    }

    div.wrapping-container button.btn-survey {
        background: linear-gradient(278.2deg, #E4750E 11.21%, rgba(228, 117, 14, 0) 103.52%), linear-gradient(0deg, #FFB526, #FFB526);
        padding: 7px 20px;
        margin-right: 37px;
    }

    div.wrapping-container a {
        font-size: 16px;
        font-style: normal;
        line-height: 19px;
        letter-spacing: 0.05em;
        text-align: center;
        color: #FFFFFF;
    }
</style>
<!--Responsive Start-->
<!--Responsive for ip5-->
<style>
    @@media only screen and (max-width:991px) {
        #image_right_description {
            display: none
        }
        #surveyDescriptionDiv {
