                    showCancelButton: true,
                    confirmButtonColor: '#FF512F',
                    cancelButtonColor: '#777',
                    confirmButtonText: 'Xác nhận',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.value == true) {
                        location.href = "/Home";
                    }
                });
            } else {
            location.href = "/Liet-ke-ket-qua-khao-sat/" + SurveyTypeId;
        }

    }
