@{
    Layout = null;
}

<!-- CSS Start -->
<style>
    .survey-tool {
        margin: 50px auto;
        /*        //width: 1110px;*/
        left: 0px;
        top: 0px;
        border-radius: 10px;
    }


        .survey-tool.survey-bg {
            background-image: linear-gradient( 88.75deg, #154183 42.71%, rgb(28 71 95 / 0%) 107.84%);
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }


    div.wrapping-container h3 {
        font-size: 36px;
        font-style: normal;
        line-height: 47px;
        color: #2AD9FF;
    }

    div.wrapping-container p {
        color: #FFFFFF;
        margin-bottom: 30px;
        font-size: 17px;
        font-style: normal;
        font-weight: 400;
        line-height: 20px;
        letter-spacing: 0.03em;
        text-align: left;
        padding-right: 20px;
    }

    div.wrapping-container a.btn-survey {
        background: linear-gradient(278.2deg, #ff9b3e 11.21%, rgba(228, 117, 14, 0) 103.52%), linear-gradient(0deg, #FFB526, #FFB526);
        padding: 7px 20px;
        margin-right: 37px;
        float: right;
    }

    div.wrapping-container a {
        font-size: 16px;
        font-style: normal;
        line-height: 19px;
        letter-spacing: 0.05em;
        text-align: center;
        color: #FFFFFF;
    }

    .title {
        padding: 0px 50px;
    }

    .content {
        padding: 0px 50px;
    }

        .content span {
            padding-right: 70px
        }
</style>
<!-- CSS End -->
<!--Responsive Start-->
<!--Iphone 5-->
<style>
    @@media only screen and (max-width:320px) {
        div .wrapping-container h3 {
            padding: 0;
            margin-left: 5%;
            line-height: unset;
            font-size: 19px;
        }

        .content {
            padding: 0;
        }

            .content span {
                padding-right: 0 !important;
                padding-left: 5%;
            }

            .content a {
                float: unset;
                margin-left: 5%;
                margin-bottom: 5%;
                font-size: 13px;
            }
        div.wrapping-container p{
            font-size:13px;
        }
        div.wrapping-container a{
            margin-left: 5%;
            margin-bottom: 5%;
            font-size: 13px;
        }
    }
</style>
<!--Iphone 5 end-->
<!--Iphone 6/7/8/X start-->
<style>
    @@media only screen and (min-width:321px) and (max-width: 425px) {
        div .wrapping-container h3 {
            padding: 0;
            margin-left: 5%;
            line-height: unset;
            font-size: 19px;
        }

        .content {
            padding: 0;
        }

            .content span {
                padding-right: 0 !important;
                padding-left: 5%;
            }

            .content a {
                float: unset;
                margin-left: 5%;
                margin-bottom: 5%;
                font-size: 13px;
            }

        div.wrapping-container p {
            font-size: 13px;
        }

        div.wrapping-container a {
            margin-left: 5%;
            margin-bottom: 5%;
            font-size: 13px;
        }
    }
</style>
<!--Iphone 6/7/8/X end-->
