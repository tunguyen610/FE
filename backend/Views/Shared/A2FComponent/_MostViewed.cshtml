@for (var i = 0; i < ViewBag.list4HottestNews.Count; i++)
{
    var item = ViewBag.list4HottestNews[i];
    <div class="row" style="margin-top: 20px">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
            <div class="geeks">
                 <a href="/chi-tiet-tin-tuc/@item.Url">
                 <img src="@item.Photo" style="width: 100%; padding: unset; height: 175px" class="img-responsive zoom"
                 alt="Image">
            </a>
            </div>
           
           
        </div>
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
            <p style="line-height: 15px; font-size: 12px; color: #265178">@item.PublishedTime</p>
            <a href="/chi-tiet-tin-tuc/@item.Url" style="font-size: 18px; font-weight: 700;color: #265178;">
                @item.Name
            </a>
            <p class="ellipsis3" style="line-height: 23.25px; font-size: 15px; font-weight: 400;">
                @item.Description
            </p>
        </div>
    </div>
}

