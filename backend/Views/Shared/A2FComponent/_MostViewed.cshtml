@{
    Layout = null;
}
<style>
        /* Zoom when hover to picture */
        .geeks { 
            overflow: hidden;
            /*display :   inline-block; */
            padding :0px;
            margin : 0px;
        }
      .zoom { 
          transition: transform .2s; 
          margin: 0 auto;
  
        }

        .zoom:hover {
          -ms-transform: scale(1.1); /* IE 9 */
          -webkit-transform: scale(1.1); /* Safari 3-8 */
          transform: scale(1.1); 
        }
    </style>

<div style="margin-top: 35px">
