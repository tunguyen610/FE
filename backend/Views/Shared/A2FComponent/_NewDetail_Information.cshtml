<!-- Post Detail Starts-->
<style>
    div.DetailContent img {
        object-fit: contain;
        width: 100% !important;
        height: unset !important;
    }
    .button-tag:hover {
        text-decoration: none;
        background-color: #FF9900 !important;
        color: white !important;
    }
    .button-tag {
        margin-left: 5px;
        margin-right: 5px;
        padding: 3px 5px 3px 5px
    }
</style>
<div class="DetailContent" style="margin-top: 10px;font-size: 19px;">

    @Html.Raw(Model.Text)
</div>

<!-- Post Detail Ends-->
<!-- Caption Image Ends -->
<div style=" padding-bottom: 10px; height: 70px; margin-top: 35px;">
    <span style="line-height: 22.5px; font-size: 18px; font-weight: 700; margin-right: 10px">Từ khóa:</span>
    @for (int i = 0; i < ViewBag.TagList.Count; i++)
    {
        var item = ViewBag.TagList[i];
        <input type="button" style="color: black; background: white; border-color: darkgray; " class="btn button-tag" onclick="location.href='/tag/@item.Slug';" value="@item.Name" /> 
