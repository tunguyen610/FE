
@{
    Layout = null;
}
<style>
    .text-news {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
</style>
<style>
    /* Do responsive for Related news */

    .image-related-news {
        width: 112px; height: 80px; padding: unset;
    }

    @@media (max-width : 991px) {
        #Container-related-news {
            margin-bottom : 50px;

        }
    }
</style>
<div id="Container-related-news">
    <div style="background-color: #154183;">
    <h5 style="color: white; line-height: 30px; font-size: 18px; font-weight: 400; padding-left: 20px;">Tin tức liên quan</h5>
</div>
</div>

@for (int i = 0; i < ViewBag.YouMayAlsoLikeList.Count; i++)
{
    var item = ViewBag.YouMayAlsoLikeList[i];
    <div class="row" style="margin-top: 20px">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5" style="">
            <a href="/chi-tiet-tin-tuc/@item.Url">
                 <img src="@item.Photo" style="width: 100%; padding: unset;" class="img-responsive"
                 alt="Image">
            </a>
           
        </div>
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
            <a class="text-news" style="font-weight: 700; line-height: 21px; font-size: 14px;" href="/chi-tiet-tin-tuc/@item.Url">@item.Name</a>
        </div>
    </div>
}
