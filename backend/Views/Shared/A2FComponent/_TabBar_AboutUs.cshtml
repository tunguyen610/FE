@{ Layout = null; }

<!-- Nabbar : starts -->
<style>
    #registerUSAIDimg {
          display: block;
          margin-left: auto;
          margin-right: auto;
    }
    .no-padding {
        padding : 0 !important;
    }
    .nav-tabs-privacy > li > a {
        line-height: 1.428571;
        padding: 20px 10px;
        letter-spacing: 1px;
        font-size: 15px;
    }

    ul.nav-tabs-privacy {
    }

    .nav-tabs-privacy li {
        width: 100%;
        
        background-color: #E9F4F5;
        color: #265178;
        border-top-width: thin;
        border-top-style: solid;
        border-top-color: #ccc;
    }

    .nav-tabs-privacy > li.active > a,
    .nav-tabs-privacy > li.active > a:focus,
    .nav-tabs-privacy > li.active > a:hover {
        background-color: #0D9CC9;
        
        color: white;
    }

    .banner {
        background-color: #E9F4F5;
        color: #265178; 
        padding: 20px 30px;  height :100px; pointer-events: none; 
    }

    .fa-arrow-right {
        float: right;
        display: none;
    }

        .fa-arrow-right.show {
            display: block;
        }

    i.icon-navbar {
        padding-top: 3px;
        pointer-events: none;
    }

    

    /* CSS in tab bar : End */

        #aboutus-image {
            margin : 0 !important;
        }

        /* Fade animate */
        .fade {
            opacity: 0;
            -webkit-transition: opacity .15s linear;
            -o-transition: opacity .15s linear;
            transition: opacity 0.40s linear;
        }
         
        /*.raw-context-wrapper-aboutus img {
            width : 100% !important; 
        }*/

        .raw-context-wrapper-aboutus img#img-vechungtoi-2 {
            width : 200px!important; 
        }

        .raw-context-wrapper-aboutus {
            /*color : #5A6990;*/

        }


        /* Css cho video load dong */
        .container-vid-res {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 56.25%;
        }

        .video-res {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        /* Css cho bai post load dong */
        .number-abouus-gthwebsite {
            width : 48px;
        }

        .wrapper-img-gthwebsite {
            display:flex; justify-content:left; margin-top:30px;
        }

        @@media (max-width :767px ) {
            .rowhide-img-aboutus {
                display :  none;
            }

            #tabPane h2 {
                font-size: 1.5em;
                margin-bottom : 0;
            }

            .wrapper-img-gthwebsite {
                margin-top:0px;
            }
        }

        /* Chỉnh sửa font size phần đào tạo */
        #tabPane {
            font-size : 17px;
        }
</style>

<!-- Responsive for tabbar : start-->
<style>
    

     /* small screen laptop */
        @@media (max-width : 1200px) and (min-width : 769px) { 
            .img-logo-tabbar-aboutus {
                display : none;
            }

            ul#privacy-ul li>a {
                font-size : 16px;
            }
        }

        /* L screen phone */
        @@media (max-width : 449px) {
            .container-nopadding-aboutus {
                padding : 0;
            }

            ul#privacy-ul li>a {
                font-size : 12px;
            }
        }

        /* S screen mobile */
        @@media (max-width : 325px) {
            .img-logo-tabbar-aboutus {
