
@{
    Layout = null;
    <style>
        @@media only screen and (max-width: 480px) {
            #latesNewsPC {
                display: none;
            }
        }

        #latesNewsPC ul li{
            padding: 10px 0px !important;
        }

    </style>
}


<div class="col-xs-12 col-md-4 col-lg-3" id="latesNewsPC">
    <div class="block-heading block-heading--line-first">
        <h4 class="block-heading__title">@ViewBag.lblBaiVietMoiNhat</h4>
    </div>



    <ul class="list-space-sm list-unstyled list-seperated">
        @{
            foreach (var obj in ViewBag.LatestNews)
            {
                <li>
                    <article class="post post--horizontal post--horizontal-xxs">
                        <div class="post__thumb ">
                            <a title="@obj.Name" href="/@obj.Url"><img width="180" height="180" style="height:70px; width:100px;" src="@obj.Photo" class="attachment-tnm-xxs-1_1 size-tnm-xxs-1_1 wp-post-image" alt="" sizes="(max-width: 180px) 100vw, 180px" /></a>
                            <!-- close a tag -->
                        </div>
                        <div class="post__text ">
                            @*@{ if (obj.PostPublishStatusId == 2)
                                    {
                                        <a title="@obj.Name" class="post__cat post__cat--bg cat-theme-bg novaticMembershipBackground" href="@obj.Url"><i class="novaticMembership mdicon mdicon-star"></i>Membership</a>
                                    }
                                }*@

                            <h3 class="post__title typescale-0">
                                <a title="@obj.Name" class="ellipsis3" href="/@obj.Url">
                                    @{ if (obj.PostPublishStatusId == 2)
                                        {
                                            <span>
                                                <div class="post-score-hexagon 1967 novaticStarInList">
                                                    <svg class="hexagon-svg " version="1.1" xmlns="http://www.w3.org/2000/svg" viewbox="-5 -5 184 210">
